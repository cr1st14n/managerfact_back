# Configuración de Base de Datos PostgreSQL
DB_HOST=192.168.0.50
DB_USER=postgres
DB_PASSWORD=root
DB_NAME=manager_fact
DB_PORT=5432
DB_SSL_MODE=disable

# Configuración del Servidor
SERVER_PORT=8080
GIN_MODE=debug

# Configuración de JWT (para futuras implementaciones)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE_HOURS=24

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de SQL Server (para las conexiones que se registren)
# Estos son valores por defecto para testing
DEFAULT_SQLSERVER_PORT=1433
DEFAULT_SQLSERVER_TIMEOUT=30

# Configuración de Pool de Conexiones
MAX_IDLE_CONNS=5
MAX_OPEN_CONNS=10
CONN_MAX_LIFETIME_MINUTES=30
CONN_MAX_IDLE_TIME_MINUTES=10